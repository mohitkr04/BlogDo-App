<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/txtUserDP"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="User Name"
        android:textStyle="bold"
        android:layout_toRightOf="@id/txtUserDP"
        android:textSize="16.sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/txtUserName"
        android:layout_toRightOf="@id/txtUserDP"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentLeft="true"
            android:text="16/05/2024"
            android:textSize="14.sp"/>
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textAlignment="textEnd"
            android:text="12:00 PM"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtDate"
            android:textSize="14.sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_below="@id/txtUserDP"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat"
        android:maxLines="2"
        android:text="Please Start Writing Better Git Comits"
        android:textColor="@color/blue"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txtBlog"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/txtTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.03"
        android:lineHeight="22sp"
        android:maxLines="4"
        android:text="Hello I am Mohit and presenting here my blog app which will introduces as BlogDo. App . This is just a beginning of my android adventure. Just follow me and do some support for the future updates."
        android:textColor="@color/black" />
    <ImageButton
        android:id="@+id/imgLike"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/txtBlog"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icon__2_" />
    <ImageButton
        android:id="@+id/imgLike2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/txtBlog"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icon__1_" />

    <ImageButton
        android:id="@+id/imgSave"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/txtBlog"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/imgLike"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/combined_shape__5_" />
    <ImageButton
        android:id="@+id/imgSave2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/txtBlog"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/imgLike"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/vector__1_" />

</RelativeLayout>